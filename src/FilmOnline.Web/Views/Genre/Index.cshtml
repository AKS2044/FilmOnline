@model FilmOnline.Web.ViewModels.GenreViewModel
@{
    ViewData["Title"] = "Редактирование жанров";
}

<div class="main__addFilm">
    @foreach (var item in Model.GenreModelResponses)
    {
        <div class="item__view-block">
            <div class="item__view">@item.Genres</div>
                <form asp-action="DeleteGenre" asp-route-id="@item.Id" method="post">
                    <input class="button__film-post" type="submit" value="Delete" />
                </form>
                <form asp-action="UpgradeGenre" asp-route-id="@item.Id" method="post">
                    <input type="text" asp-for="Genre" class="mine__input" required />
                    <input class="button__film-post" type="submit" value="Изменить" />
                </form>
         </div>
    }

    <div class="line"></div>

    <form asp-controller="Genre" asp-action="AddGenre" method="post">
        <div class="registration__block">
            <label asp-for="Genre" class="mine__form">Добавить жанр:</label>
            <input type="text" asp-for="Genre" class="mine__input" required />
        </div>
        <div class="registration__block">
            <input type="submit" value="Добавить" class="mine__button" />
        </div>
    </form>
</div>